<form action="/posts/<%= @post.id %>" method="post">
  <input id="patch" type="hidden" name="_method" value="patch">
  <input id="name" type="text" name="post[name]" placeholder="Name" value="<%= @post.name %>">
  <input id="content" type="text" name="post[content]" placeholder="Content" value="<%= @post.content %>">
  <input type="submit" name="submit" value="Submit" id="submit">
</form>
